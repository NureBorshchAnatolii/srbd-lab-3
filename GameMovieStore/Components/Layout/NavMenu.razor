@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthStateProvider

<div class="nav-menu p-3">
    <h5 class="mb-3 text-center nav-title">Store</h5>

    <nav class="nav flex-column">
        
        @if (_isAuthenticated)
        {
            <h6 class="mt-4 nav-section">Entities</h6>

            <NavLink class="nav-link" href="/movies">Movies</NavLink>
            <NavLink class="nav-link" href="/games">Games</NavLink>
            <NavLink class="nav-link" href="/purchases">Purchases</NavLink>

            <h6 class="mt-4 nav-section">Account</h6>
            <a class="nav-link" href="/logout">Logout</a>
        }
        else
        {
            <h6 class="mt-4 nav-section">Account</h6>
            <a class="nav-link" href="/login">Login</a>
            <a class="nav-link" href="/register">Register</a>
        }

    </nav>
</div>

<style>
    .nav-menu {
        width: 220px;
        height: 100vh;
        padding: 20px;
        font-family: "Segoe UI", sans-serif;
    }

    .nav-title {
        font-weight: 600;
        color: #ffffff;
        letter-spacing: 0.5px;
    }

    .nav-section {
        font-size: 0.8rem;
        font-weight: 600;
        color: rgba(255,255,255,0.65);
        margin-top: 1.2rem;
        margin-bottom: 0.4rem;
        text-transform: uppercase;
    }

    .nav-link,
    .nav-menu a.nav-link {
        padding: 10px 14px;
        margin-bottom: 4px;
        border-radius: 6px;

        color: rgba(255,255,255,0.80);
        background: none;

        display: block;
        transition: all 0.20s ease;
    }

    .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.22);
        color: #ffffff;
        backdrop-filter: brightness(1.3);
    }

    .nav-link.active {
        background-color: rgba(255,255,255,0.30);
        color: #ffffff;
        font-weight: 600;
    }

    .nav-scrollable {
        display: none;
    }

    .navbar-toggler:checked ~ .nav-scrollable {
        display: block;
    }
</style>

@code {
    private bool _isAuthenticated;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        _isAuthenticated = authState.User.Identity?.IsAuthenticated ?? false;
    }
}
