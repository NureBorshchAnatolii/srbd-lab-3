@using Microsoft.AspNetCore.Components.Authorization
@inject AuthenticationStateProvider AuthStateProvider

<div class="nav-menu p-3">
    <h5 class="mb-3">Store</h5>

    <nav class="nav flex-column">

        <NavLink class="nav-link" href="/">Home</NavLink>

        @if (_isAuthenticated)
        {
            <h6 class="mt-3">Entities</h6>

            <NavLink class="nav-link" href="/movies">Movies</NavLink>
            <NavLink class="nav-link" href="/games">Games</NavLink>
            <NavLink class="nav-link" href="/users">Users</NavLink>
            <NavLink class="nav-link" href="/orders">Orders</NavLink>

            <h6 class="mt-3">Account</h6>
            <a class="nav-link" href="/logout">Logout</a>
        }
        else
        {
            <h6 class="mt-3">Account</h6>
            <a class="nav-link" href="/login">Login</a>
            <a class="nav-link" href="/register">Register</a>
        }

    </nav>
</div>

<style>
    .nav-menu {
        width: 220px;
        background: #f8f9fa;
        border-right: 1px solid #ddd;
        height: 100vh;
    }

    .nav-link {
        padding: 8px 0;
        cursor: pointer;
    }

    .nav-link:hover {
        text-decoration: underline;
    }
</style>

@code {
    private bool _isAuthenticated;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        _isAuthenticated = authState.User.Identity?.IsAuthenticated ?? false;
    }
}